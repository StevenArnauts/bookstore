@model ProductModel

@{
	ViewData["Title"] = Model.Id == null ? "New Product" : Model.Name;
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" method="POST">
	@Html.HiddenFor(model => model.Id)
	<div class="form-group">
		@Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Price, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Stock, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		<input type="submit" name="action" class="btn btn-default" value="Save" />
		<input type="submit" name="action" class="btn btn-danger" value="Delete" />
	</div>
</form>


