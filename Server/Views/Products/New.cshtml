@using Bookstore.Controllers
@model ProductSpecification

@{
	ViewData["Title"] = "Add Product";
}
<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("New", "Products", null, FormMethod.Post)) {
	<div class="form-group">
		@Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Price, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Stock, new { htmlAttributes = new { @class = "control-label" } })
		@Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
	</div><div class="form-group">
		<input type="submit" value="Add" class="btn btn-default" />
	</div>
}
